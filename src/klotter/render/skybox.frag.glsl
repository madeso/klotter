#version 330 core

///////////////////////////////////////////////////////////////////////////////
// uniforms

uniform samplerCube u_skybox_tex;

///////////////////////////////////////////////////////////////////////////////
// varying
in vec3 v_tex_normal;


///////////////////////////////////////////////////////////////////////////////
// output
out vec4 o_frag_color;


///////////////////////////////////////////////////////////////////////////////
// code
void main()
{
    vec4 object_color = texture(u_skybox_tex, v_tex_normal);
    o_frag_color = object_color;
}
