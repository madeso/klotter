#version 330 core

///////////////////////////////////////////////////////////////////////////////
// attributes
in vec3 a_position;


///////////////////////////////////////////////////////////////////////////////
// uniforms
{{uniform_buffer_source}}


///////////////////////////////////////////////////////////////////////////////
// varying
out vec3 v_tex_normal;


///////////////////////////////////////////////////////////////////////////////
// code
void main()
{
    gl_Position = (u_projection * mat4(mat3(u_view)) * vec4(a_position.xyz, 1.0)).xyww;
    v_tex_normal = a_position.xyz;
}
